{
  "name": "nocturne",
  "version": "0.0.1",
  "description": "nocturne",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kdama/nocturne.git"
  },
  "scripts": {
    "start": "npm-run-all -l clean -p serve watch",
    "test": "run-s test:clean test:single",
    "build": "webpack-cli",
    "clean": "del-cli ./build",
    "lint": "run-p lint:*",
    "fix": "prettier -l --print-width 80 --trailing-comma all --write \"*.{ts,tsx}\" \"src/**/*.{ts,tsx}\" \"__tests__/**/*.{ts,tsx}\"",
    "serve": "webpack-dev-server --inline --port 8000",
    "sloc": "sloc ./src",
    "watch": "run-s test:clean test:run",
    "lint:prettier": "prettier -l --print-width 80 --trailing-comma all \"*.{ts,tsx}\" \"src/**/*.{ts,tsx}\" \"__tests__/**/*.{ts,tsx}\"",
    "lint:tslint": "tslint \"./**/*.ts?(x)\" -e \"./node_modules/**\" -t stylish",
    "test:clean": "del-cli ./build/test",
    "test:run": "jest -c ./jest.config.json --watch",
    "test:single": "jest -c ./jest.config.json --coverage"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/classnames": "^2.2.0",
    "@types/enzyme": "^3.1.9",
    "@types/fs-extra": "^5.0.2",
    "@types/html-webpack-plugin": "^2.28.0",
    "@types/jest": "^22.2.3",
    "@types/node": "^9.6.5",
    "@types/react": "^16.3.10",
    "@types/react-dom": "^16.0.5",
    "@types/react-test-renderer": "^16.0.1",
    "@types/shelljs": "^0.7.2",
    "@types/webpack": "^4.1.3",
    "babel-polyfill": "^6.23.0",
    "chokidar-cli": "^1.2.0",
    "classnames": "^2.2.5",
    "cpx": "^1.5.0",
    "cross-env": "^5.0.1",
    "del-cli": "^1.1.0",
    "enzyme": "^3.3.0",
    "fs-extra": "^5.0.0",
    "html-webpack-plugin": "^3.2.0",
    "imports-loader": "^0.8.0",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jest": "^22.4.3",
    "json-loader": "^0.5.4",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.5.2",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "react-test-renderer": "^16.3.1",
    "remap-istanbul": "^0.11.0",
    "sloc": "^0.2.0",
    "ts-jest": "^22.4.3",
    "ts-loader": "^4.2.0",
    "ts-node": "^5.0.1",
    "tslint": "^5.5.0",
    "tslint-config-prettier": "^1.10.0",
    "tslint-loader": "^3.5.3",
    "tslint-react": "^3.5.1",
    "typescript": "^2.4.1",
    "watch": "^1.0.2",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14",
    "webpack-dev-server": "^3.1.3",
    "webpack-espower-loader": "^2.0.0",
    "whatwg-fetch": "^2.0.3"
  },
  "engines": {
    "node": ">=8"
  }
}
